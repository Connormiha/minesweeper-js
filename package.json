{
  "name": "minesweeper",
  "description": "",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Mikhail Bodrov",
  "engines": {
    "node": ">=12.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/Connormiha/minesweeper-js.git"
  },
  "scripts": {
    "build": "rm -fr build && TS_NODE_PROJECT=\"tsconfig.webpack.json\" NODE_ENV=production webpack",
    "build:gh": "rm -fr build && TS_NODE_PROJECT=\"tsconfig.webpack.json\" NODE_ENV=production ROOT_URL=minesweeper-js webpack",
    "coverage": "NODE_ENV=testing jest --coverage --config jest.json",
    "lint": "TS_NODE_PROJECT=\"tsconfig.webpack.json\" ts-node lint.ts",
    "precommit": "NODE_ENV=pre_commit npm run types && npm run lint",
    "prepush": "npm run lint && npm run types && npm test",
    "start": "TS_NODE_PROJECT=\"tsconfig.webpack.json\" webpack-dev-server",
    "build:open": "http-server build --gzip -p 8000 -s -c-1",
    "test": "NODE_ENV=testing jest",
    "types": "tsc --noEmit -p ./",
    "upgrade": "npm-check --update --save-exact",
    "update-gh": "./helpers/update-gh.sh"
  },
  "devDependencies": {
    "@types/autoprefixer": "9.7.2",
    "@types/enzyme": "3.10.5",
    "@types/html-webpack-plugin": "3.2.2",
    "@types/jest": "25.2.1",
    "@types/lodash": "4.14.150",
    "@types/mini-css-extract-plugin": "0.9.1",
    "@types/node": "13.13.4",
    "@types/script-ext-html-webpack-plugin": "2.1.1",
    "@types/terser-webpack-plugin": "2.2.0",
    "@types/webpack": "4.41.12",
    "@types/webpack-dev-server": "3.10.1",
    "@typescript-eslint/eslint-plugin": "2.30.0",
    "@typescript-eslint/parser": "2.30.0",
    "autoprefixer": "9.7.6",
    "bem-css-modules": "1.4.2",
    "css-loader": "3.5.3",
    "csso": "4.0.3",
    "csso-loader": "0.3.1",
    "csso-webpack-plugin": "2.0.0-beta.1",
    "enzyme": "3.11.0",
    "eslint": "6.8.0",
    "eslint-plugin-jest": "23.8.2",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-sonarjs": "0.5.0",
    "file-loader": "6.0.0",
    "html-webpack-plugin": "4.3.0",
    "http-server": "0.12.3",
    "husky": "4.2.5",
    "jest-cli": "25.5.4",
    "jest-css-modules-transform": "4.0.0",
    "lodash": "4.17.15",
    "mini-css-extract-plugin": "0.9.0",
    "postcss": "7.0.28",
    "postcss-loader": "3.0.0",
    "preload-webpack-plugin": "3.0.0-beta.4",
    "script-ext-html-webpack-plugin": "2.1.4",
    "style-loader": "1.2.1",
    "stylint": "2.0.0",
    "stylus": "0.54.7",
    "stylus-loader": "3.0.2",
    "svg-url-loader": "5.0.0",
    "svgo": "1.3.2",
    "svgo-loader": "2.2.1",
    "terser": "4.6.13",
    "terser-webpack-plugin": "3.0.0",
    "ts-jest": "25.4.0",
    "ts-loader": "7.0.2",
    "ts-node": "8.10.1",
    "typescript": "3.8.3",
    "url-loader": "4.1.0",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.10.3",
    "webpack-sources": "1.4.3"
  },
