.progress
  align-items: center
  background: rgba(255, 255, 255, 0.8)
  display: none
  justify-content: center
  position: fixed
  left: 0
  top: 0
  height: 100vh
  width: 100vw
  user-select: none

  &__inner
    background: #e9ecef
    min-height: 30px
    position: relative
    width: 200px
    max-width: 90%
    display: flex
    align-items: center
    justify-content: center
    overflow: hidden
    border-radius: 7px

  &__progress
    background: #01acff
    position: absolute
    left: 0
    top: 0
    bottom: 0

  &__text
    position: relative
    color: #000
    font-size: 20px
    text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.6)
