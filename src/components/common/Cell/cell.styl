$color = #babdb6
// @stylint off
$colors =   blue,
            green,
            red,
            red,
            red,
            red,
            red,
            red,
// @stylint on

.cell
    box-sizing: border-box
    border: 0
    border-radius: 4px
    box-shadow: none
    display: inline-block
    font-size: 16px
    height: 30px
    width: 30px
    overflow hidden
    outline: 0
    padding: 0
    position: relative
    vertical-align: top

    text-align center
    line-height: 28px
    margin: 2px 2px 0

    cursor: default

    &:focus
        z-index: 1

    &_open
        background: #dededc

        &:focus
            background: #d3d7cf

        &:disabled
            background: #dededc

    &_close
        background: $color
        transition: background 0.3s

        &:focus
        &:hover
            background: #d3d7cf
        
        &:focus
            transition: none

    &_bomb
    &_flag
    &_question
        &::before
            content: ''
            position: absolute
            left: 0
            right: 0
            top: 0
            bottom: 0
            background-repeat: no-repeat
            background-position: center
            background-size: 20px 20px

    &_dead
        background-color: red

        &:focus
            background-color: red

    &_bomb
        &::before
            background-image: url('~assets/images/bomb.svg')
    &_flag
        &::before
            background-image: url('~assets/images/flag.svg')

    &_question
        &::before
            background-image: url('~assets/images/question.svg')

    &_count
        for $i in 1..8
            &_{$i}
                color: $colors[$i - 1]
